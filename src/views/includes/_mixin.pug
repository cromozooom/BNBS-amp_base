mixin description(color)
	section.container.pt-3
		if color === "dark"
			.row.description.description--dark
				.col.m-0.p-3
					h4="Description"
					p= casino.description.long
				
		if color === "light"
			.row.description.description--light
				.col.m-0.p-3
					h4="Description"
					p= casino.description.long
		
		if color === "white"
			.row.description.description--white
				.col.m-0.p-3
					h4="Description"
					p= casino.description.long

